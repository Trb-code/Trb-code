 .product_list {
  margin: 0 32rpx 0 20rpx;
}
 .product_list .product_title {
  font-size: 26rpx;
  color: #434343;
  margin: 17rpx 0 17rpx 26rpx;
  font-weight: 500;
}
 .product_list .product_list_item {
  height: 209rpx;
  width: 698rpx;
  overflow: hidden;
  background-color: white;
}
 .product_list .product_list_item .image_wrapper {
  float: left;
  margin: 9rpx 29rpx 9rpx 15rpx;
}
 .product_list .product_list_item .image_wrapper image {
  height: 191rpx;
  width: 191rpx;
}
 .product_list .product_list_item .desc {
  height: 156rpx;
  margin-top: 26rpx;
  margin-bottom: 27rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
 .product_list .product_list_item .desc .title {
  font-size: 24rpx;
  color: #434343;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}
 .product_list .product_list_item .desc .priceAndNum {
  display: flex;
  justify-content: space-between;
}
 .product_list .product_list_item .desc .priceAndNum .price {
  font-size: 24rpx;
  color: red;
}
.product_list .product_list_item .desc .priceAndNum .num {
  font-size: 28rpx;
  color: #434343;
  margin-right: 13rpx;
}



